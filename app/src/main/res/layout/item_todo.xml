<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="todo"
            type="com.codeliner.achacha.data.todos.Todo" />

        <variable
            name="clickListener"
            type="com.codeliner.achacha.todos.list.TodoClickListener" />

        <variable
            name="moveListener"
            type="com.codeliner.achacha.todos.list.TodoMoveListener" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemTodo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/spacing_s"
        android:paddingHorizontal="@dimen/spacing_m">

        <ImageButton
            android:id="@+id/itemTodo_isFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_radio_button_unchecked"
            android:background="@null"
            android:scaleType="fitCenter"
            android:onClick="@{() -> clickListener.onFinished(todo, position)}"
            app:todoIsFinished="@{todo}"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/itemTodo_workContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemTodo_workContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_m"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:onClick="@{() -> clickListener.onClick(todo)}"
            app:layout_constraintStart_toEndOf="@+id/itemTodo_isFinished"
            app:layout_constraintEnd_toStartOf="@+id/itemTodo_remove"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/itemTodo_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work"
                android:textSize="@dimen/text_m"
                app:todoWorkString="@{todo}"
                app:todoSetTextDarkWhenFinished="@{todo}"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/itemTodo_helps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:textSize="@dimen/text_xs"
                android:singleLine="true"
                android:ellipsize="end"
                app:setVisible="@{!todo.finished}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/itemTodo_created"
                app:layout_constraintTop_toBottomOf="@+id/itemTodo_work"
                app:layout_constraintBottom_toBottomOf="parent"
                app:todoHelpString="@{todo}" />

            <TextView
                android:id="@+id/itemTodo_created"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_s"
                android:text="@string/created"
                android:textSize="@dimen/text_xs"
                app:setVisible="@{!todo.finished}"
                app:todoCreatedFormatted="@{todo}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/itemTodo_isFinishedString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_s"
                android:text="@string/is_finished"
                android:textSize="@dimen/text_xs"
                app:todoIsFinishedString="@{todo}"
                app:setVisible="@{todo.finished}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/itemTodo_created"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/spacing_s"
                android:background="@color/divider"
                app:setAnimation="@{todo.finished}"
                app:layout_constraintStart_toEndOf="@+id/itemTodo_work"
                app:layout_constraintEnd_toStartOf="@id/itemTodo_isFinishedString"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/itemTodo_remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_remove_outline"
            android:background="@null"
            android:scaleType="fitCenter"
            android:onClick="@{() -> clickListener.onRemove(todo)}"
            app:setVisible="@{todo.finished}"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/itemTodo_workContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>